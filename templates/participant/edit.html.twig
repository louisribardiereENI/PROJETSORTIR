{% extends 'base.html.twig' %}

{% block title %}Sortir.com | Modifier mon profil{% endblock %}
{% block header %}
    {% include 'module/navbar/navbar.html.twig' %}
{% endblock %}
{% block body %}

    <section>
        <h4 class="center nav-color margin-top-25"><strong>MODIFIER MON PROFIL</strong></h4>
        <div class="row">
            <div class="col">
            </div>
            <div class="col-10">
                <div class="row">
                    <div class="col-lg-4">
                        <div class="card mb-4 border-color-first-color border-radius-20">
                            <div class="card-body text-center">
                                <img src="{{ asset('img/avatar/'~participant.photoParticipant) }}" alt="avatar"
                                     class="rounded-circle img-fluid" style="width: 150px;">
                                <h5 class="my-3">{{ participant.nom }} {{ participant.prenom }}</h5>
                                {# <p>{% if participant.roles[0] == 'ADMIN' %}Administrateur{% else %}Utilisateur{% endif %}</p>  #}
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-8">
                        <div class="card mb-4 border-color-first-color border-radius-20">
                            <div class="card-body">
                                {{ form_start(form) }}
                                <div class="row">
                                    <div class="col-sm-3">
                                        <p class="mb-0">Nom</p>
                                    </div>
                                    <div class="col-sm-9">
                                        {{ form_widget(form.nom) }}

                                    </div>
                                </div>
                                <hr>
                                <div class="row">
                                    <div class="col-sm-3">
                                        <p class="mb-0">Prénom</p>
                                    </div>
                                    <div class="col-sm-9">
                                        {{ form_widget(form.prenom) }}
                                    </div>
                                </div>
                                <hr>
                                <div class="row">
                                    <div class="col-sm-3">
                                        <p class="mb-0">Téléphone</p>
                                    </div>
                                    <div class="col-sm-9">
                                        {{ form_widget(form.telephone) }}

                                    </div>
                                </div>
                                <hr>
                                <div class="row">
                                    <div class="col-sm-3">
                                        <p class="mb-0">Pseudo</p>
                                    </div>
                                    <div class="col-sm-9">
                                        {{ form_widget(form.pseudo) }}
                                    </div>
                                </div>
                                <hr>
                                <div class="row">
                                    <div class="col-sm-3">
                                        <p class="mb-0">Mot de passe</p>
                                    </div>
                                    <div class="col-sm-9">
                                        {{ form_widget(form.mdp) }}
                                    </div>
                                </div>
                                <hr>
                                <div class="row">
                                    <div class="col-sm-3">
                                        <p class="mb-0">Confirmation Mot de passe</p>
                                    </div>
                                    <div class="col-sm-9">
                                        {{ form_widget(form.mdp2) }}
                                    </div>
                                </div>
                                <hr>
                                <div class="row">
                                    <div class="col-sm-3">
                                        <p class="mb-0">Photo de profil</p>
                                    </div>
                                    <div class="col-sm-9">
                                        {{ form_widget(form.photoParticipant) }}
                                    </div>
                                </div>
                                <hr>
                                <div class="centrer">
                                    <div class="btn-group" role="group">
                                        <button type="button"
                                                onclick="window.location.href = '{{ path('participant_details', {'id':app.user.id}) }}';"
                                                class="btn btn-secondary">Annuler
                                        </button>
                                    </div>
                                    <div class="btn-group" role="group">
                                        {{ form_widget(form.submit) }}
                                    </div>
                                </div>

                                {{ form_end(form) }}
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col">

            </div>

        </div>
    </section>
{% endblock %}
